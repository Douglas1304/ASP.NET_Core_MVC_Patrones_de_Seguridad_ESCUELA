@model IEnumerable<PatronesDeSeguridad.Models.tblMatriculaEstudiante>
@{
    ViewData["Title"] = "Citas Activas";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ImprimirMatriculas</title>
    <style>
        .contenedor {
            width: 900px !important;
            height: 842px !important;
            margin: auto;
            border: 1px solid #ccc;
            padding: 20px;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        h1 {
            text-align: center;
            margin-bottom: 10px;
            color: #03A99F;
        }

        h4 {
            color: #03A99F;
            margin-bottom: 10px;
        }

        .table-container {
            display: table;
            width: 100%;
            border-collapse: collapse;
        }

        .table-row {
            display: table-row;
        }

        .table-cell {
            display: table-cell;
            padding: 8px;
            vertical-align: top;
        }

        .details-label {
            font-weight: bold;
        }

        .details-value {
            background-color: #F4F4F4;
            padding: 5px;
            border-radius: 3px;
        }

        /* ... Otros estilos anteriores ... */

        /* Estilos para la tabla de citas */
        .citas-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .citas-table th,
            .citas-table td {
                border: 1px solid #ddd;
                padding: 8px;
            }

            .citas-table th {
                background-color: #03A99F;
                color: white;
                text-align: center;
                font-weight: bold;
            }

            .citas-table td {
                text-align: center;
            }

            .citas-table .text-danger {
                color: red;
            }

        /* ... Otros estilos ... */

    </style>
</head>
<body>

    <div class="">
        <table style="width:100%">
            <tr>
                <td>
                    <img src="~/imagenes/OIP.jpg" style="width: 250px; margin-left:50px" />
                </td>
                <td style="text-align:left">
                    <table style="margin-left:250px">
                        <tr>
                            <td>
                                <p class="title text-center"><h2>Escuela Sor María Romero</h2></p>
                            </td>
                        </tr>
                        <tr>
                            <td><p class="text text-center">Direccion: De la UNED 500mts noroeste.</p></td>
                        </tr>
                        <tr>
                            <td>
                                <p class="text text-center">Correo: escsormaria@correo.com</p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p class="text text-center">Telefono: 2470-0000</p>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        <br />

        <div class="details-container">
            <h1>Reporte Matriculas</h1>
            <br />
            <h4>Lista de matriculas</h4>
            <hr />
            <br />
            <div class="table-container">
                <div class="table-row">
                    <div class="table-cell">
                        <div class="card-body cuerpoTabla">
                            <div class="table-responsive">
                                @if (Model.Count() > 0)
                                {
                                    <table class="citas-table">
                                        <thead class="text-white">
                                            <tr>
                                                 <th class="text-center">
                                                 Ced.
                                                </th>
                                                <th class="text-center">
                                                    Estudiante
                                                </th>
                                                <th class="text-center">
                                                    Identificador Asignación
                                                </th>
                                                <th class="text-center">
                                                    Nombre del Curso
                                                </th>
                                                <th class="text-center">
                                                    Nivel del Curso
                                                </th>
                                                <th class="text-center">
                                                    Nombre de la Materia
                                                </th>

                                                <th class="text-center">
                                                    Profesor
                                                </th>
                                                <th class="text-center">
                                                    Fecha Matricula
                                                </th>
                                                <th class="text-center">
                                                    Estado Matricula
                                                </th>
                                                <th class="text-center">
                                                    Fecha Calificación
                                                </th>
                                                <th class="text-center">
                                                    Calificación
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td class="text-center">
                                                        @Html.DisplayFor(modelItem => item.Estudiante.IdentificationNumber)
                                                    </td>
                                                    <td class="text-center">
                                                        @Html.DisplayFor(modelItem => item.Estudiante.FirstName)
                                                        @Html.DisplayFor(modelItem => item.Estudiante.LastName1)
                                                        @Html.DisplayFor(modelItem => item.Estudiante.LastName2)
                                                    </td>
                                                    <td class="text-center">
                                                        @Html.DisplayFor(modelItem => item.Asignacion.identificadorAsignacion)
                                                    </td>
                                                    <td class="text-center">
                                                        @Html.DisplayFor(modelItem => item.Asignacion.Curso.nombreCurso)
                                                    </td>
                                                    <td class="text-center">
                                                        @Html.DisplayFor(modelItem => item.Asignacion.Curso.Level.nombreNivel)
                                                    </td>
                                                    <td class="text-center">
                                                        @Html.DisplayFor(modelItem => item.Asignacion.Materia.nombreMateria)
                                                    </td>

                                                    <td class="text-center">
                                                        @Html.DisplayFor(modelItem => item.Asignacion.Profesor.FirstName)
                                                        @Html.DisplayFor(modelItem => item.Asignacion.Profesor.LastName1)
                                                        @Html.DisplayFor(modelItem => item.Asignacion.Profesor.LastName2)
                                                    </td>
                                                    <td class="text-center">
                                                        @Html.DisplayFor(modelItem => item.FechaMatricula)
                                                    </td>
                                                    <td class="text-center">
                                                        @if (item.EstadoMatricula)
                                                        {
                                                            <span class="badge badge-success">Activo</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-danger">Inactivo</span>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <!-- Para FechaCalificacion -->
                                                        @if (item.FechaCalificacion == DateTime.MinValue)
                                                        {
                                                            <span class="badge badge-primary">Sin Fecha</span>
                                                        }
                                                        else
                                                        {
                                                            @Html.DisplayFor(modelItem => item.FechaCalificacion)
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <!-- Para Calificacion -->
                                                        @if (item.Calificacion == 0)
                                                        {
                                                            <span class="badge badge-primary">Sin Calificar</span>
                                                        }
                                                        else
                                                        {
                                                            @Html.DisplayFor(modelItem => item.Calificacion)
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                }
                                else
                                {
                                    <p class="text-danger">No hay registros</p>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
    </div>
    </div>

</body>
</html>
