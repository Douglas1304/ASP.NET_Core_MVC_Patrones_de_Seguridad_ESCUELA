@model IEnumerable<PatronesDeSeguridad.Models.tblProfesor>

@{
    ViewData["Title"] = "Profesores Activos";
}
<h2 class="text-center text-light">@ViewData["Title"]</h2>

<div class="row">
    <div class="offset-9 col-3 d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-success btn-lg" style="width: 48%;">
     <i class="bi bi-plus-circle"></i> Nuevo Profesor
        </a>
        <a class="btn btn-danger btn-lg" asp-area="" asp-controller="tblProfesores" asp-action="Inactivos" style="width: 48%;">
            <i class="bi bi-list-ul"></i> Lista Inactivos
        </a>
    </div>
</div>
<div class="row">
    <div class="offset-12">
        <div>
            <div class="card-header estilos">
                <h4 class="text-white"><strong>Lista de Profesores activos</strong></h4>
            </div>
            <div class="card-body cuerpoTabla">
                <div class="table-responsive">
                    
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="buscadorJS" width="100%" cellpadding="0">
                            <thead class="text-white">
                                <tr>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.FirstName)
                                    </th>
                                    <th class ="text-center">
                                        @Html.DisplayNameFor(model => model.LastName1)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.LastName2)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Phone)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.Token)
                                    </th>
                                    <th class="text-center">
                                        @Html.DisplayNameFor(model => model.EstadoProfesor)
                                    </th>
                                    <th class="text-center">Gestión</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.FirstName)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.LastName1)
                                        </td>
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.LastName2)
                                        </td class="text-center">
                                        <td class="text-center">
                                            @Html.DisplayFor(modelItem => item.Phone)
                                        </td>
                                        <td class="text-center" >
                                            @if (item.Token.Length >= 0)
                                            {
                                                 <span class="badge badge-danger"><i class="bi bi-lock"></i></span>
                                            }
                                        
                                        </td>
                                        <td class="text-center">
                                            @if (item.EstadoProfesor)
                                            {
                                                <span class="badge badge-success">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Inactivo</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.IdentificationNumber"><i class="bi-pencil-fill"></i> </a>
                                            <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.IdentificationNumber"><i class="bi-info-circle-fill"></i> </a>
                                    
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-danger">No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .dataTables_wrapper .dataTables_info {
        color: white;
    }

    .estilos {
        background-color: #297373;
    }

    .cuerpoTabla {
        background-color: #253237;
    }

    .dataTables_length select {
        background-color: #297373;
        color: white;
    }

    .dataTables_length label {
        color: white;
    }

    .dataTables_filter input[type="search"] {
        background-color: #CAD8DE;
        color: black;
    }

    .dataTables_filter label {
        color: white;
    }
</style>

@section Scripts{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            //Llamar a datatable
            $('#buscadorJS').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>
}